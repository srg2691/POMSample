<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">

<suite name="Opencart App Test Regression Suite" thread-count="4" parallel="tests" verbose="4">


	<listeners>
		<listener class-name="com.qa.opencart.listeners.ExtentReportListener" />


		<listener class-name="com.qa.opencart.listeners.TestAllureListener" />
		
		
		<listener class-name="com.qa.opencart.listeners.AnnotationTransformer" />
		
		


	</listeners>


	<test name="Login Page Test_chrome">
	
	<parameter name="browser" value="chrome"></parameter>
		<classes>
			<class name="com.qa.opencart.test.LoginPageTest" />
		</classes>
	</test>


	<test name="Accounts Page Test_firefox">
	<parameter name="browser" value="firefox"></parameter>
		<classes>
			<class name="com.qa.opencart.test.AccountsPageTest" />
		</classes>
	</test>
	
	<test name="Login Page Test_edge">
	<parameter name="browser" value="edge"></parameter>
		<classes>
			<class name="com.qa.opencart.test.LoginPageTest" />
		</classes>
	</test>

	
	

